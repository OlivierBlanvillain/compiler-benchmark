#!/usr/bin/env bash

cpuFrequency=3400

cpuShield=1-3

# processName:serviceName1:serviceName2:...
read -r -d '' servicesToStop << EOM
atd:atd.service
acpid:acpid.service:acpid.socket:acpid.path
cron:cron.service
dbus-daemon:dbus.service:dbus.socket
irqbalance:irqbalance.service
rsyslogd:rsyslog.service:syslog.socket
EOM

kernelRelease="4.9.0-0.bpo.2-amd64"

# These cannot be written (IO Error)
irqAffinitySkip=( /proc/irq/0/smp_affinity /proc/irq/2/smp_affinity )
irqAffinityFile="savedIrqAffinity"

scriptDir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $scriptDir

# Utils

function checkFail() {
  [[ $1 -eq 0 ]] || {
    echo "Failed to $2"
    echo "$3"
    exit 42
  }
}

function sudoWrite() {
  echo "$1" | sudo tee $2 > /dev/null
}

# Systm Config Checks

function checkKernelRelease() {
  [[ $(uname -r) == $kernelRelease ]] || {
    echo "Expected kernel release $kernelRelease, found $(uname -r)"
    exit 42
  }
  echo " - [ok] Found expected kernel release"
}

function checkNoHyperThreading() {
  local perCore=$(lscpu | sed 's/ *: */:/' | awk -F ":" '$1 == "Thread(s) per core" { print $2 }')
  [[ "$perCore" == "1" ]] || {
    echo "Hyper-Threading seems to be enabled, lscpu reports $perCore threads per core"    
    exit 42
  }
  echo " - [ok] Hyper-Threading is disabled"
}

function checkNoTurboBoost() {
  local tb=$(cpupower frequency-info | awk '/.*boost\ state\ support.*/{y=1;next}/.*Active.*/{y=0}y')
  [[ "$tb" =~ ^.*Supported:\ no$ ]] || {
    echo "Expected turbo boost to be disabled, 'cpupower frequency-info' reports $tb"
    exit 42
  }
  echo " - [ok] Turbo boost is disabled"
}

function checkNoNuma() {
  local numaNodes=$(numactl --hardware | sed 's/ *: */:/' | awk -F ":" '$1 == "available" { print $2 }' | awk '{ print $1 }')
  [[ "$numaNodes" == "1" ]] || {
    echo "Expected 1 numa node, numactl returned $numaNodes"
    exit 42
  }
  echo " - [ok] The system has 1 numa node"
}

function checkNoPstate() {
  local freqDriver=$(cpupower frequency-info | grep "driver:")
  [[ "$freqDriver" =~ ^.*driver:\ acpi-cpufreq$ ]] || {
    echo "Expected acpi-cpufreq CPU frequency driver, 'cpupower frequency-info' reports $freqDriver"
    exit 42
  }
  echo " - [ok] The CPU frequency driver is acpi-cpufreq"
}

function checkRunningProcesses() {
  local pss=$(ps -e -o comm,args --no-headers)
  pss=$(echo "$pss" | sed 's/ \+/_/g' | sort)
  local ok=0
  prefixes=$(cat ./processWhitelist | awk '{ print $1 }')
  for p in $pss; do
    ok=0
    for pre in $prefixes; do
      [[ $p = $pre* && "$pre" != "" ]] && {
        ok=1
        break
      }
    done
    [[ $ok == 1 ]] || {
      echo "Process $p is not listed in $scriptDir/processWhitelist"
      exit 42
    }
    ok=0
  done
  echo " - [ok] All running processes are listed in $scriptDir/processWhitelist"
}

# Services

function stopServices() {
  for s in $servicesToStop; do
    echo $s |  tr : " " | {
      read process services
      sudo systemctl stop $services
      if pgrep -x "$process" > /dev/null; then
        echo "Failed to stop service $services, $process still running with PID $(pgrep -x $process)"
        exit 42
      fi
      echo " - [ok] Stopped service $services"
    }
  done
}

function startServices() {
  for s in $servicesToStop; do
    echo $s |  tr : " " | {
      read process services
      sudo systemctl start $services
      echo " - [ok] Started service $services"
    }
  done
}

# CPU Frequency

function setFrequency() {
  sudo cpupower -c all frequency-set -f ${cpuFrequency}MHz > /dev/null

  local freqs=$(cat /proc/cpuinfo | grep MHz)
  local c=$(echo "$freqs" | grep $cpuFrequency.000 | wc -l)
  [[ "$c" == "4" ]] || {
    echo "Expected /proc/cpuinfo to show $cpuFrequency.000 MHz for all processors"
    echo "$freqs"
    exit 42
  }

  local govs=$(cat /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor)
  local c=$(echo "$govs" | grep userspace | wc -l)
  [[ "$c" == "4" ]] || {
    echo "Expected 'cat /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor' to show userspace for all processors"
    echo "$govs"
    exit 42
  }

  echo " - [ok] CPU frequency set to $cpuFrequency MHz"
}

function resetFrequency() {
  sudo cpupower -c all frequency-set -g ondemand > /dev/null

  local govs=$(cat /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor)
  local c=$(echo "$govs" | grep ondemand | wc -l)
  [[ "$c" == "4" ]] || {
    echo "Expected 'cat /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor' to show ondemand for all processors"
    echo "$govs"
    exit 42
  }

  echo " - [ok] CPU frequency scaling governor set to 'ondemand'"
}

# CPU Shield

function checkNoShield() {
  local shield=$(sudo cset shield)
  [[ "$shield" =~ ^.*shielding\ not\ active\ on\ system$ ]] || {
    echo "Expected no shielding"
    echo "$shield"
    exit 42
  }
  echo " - [ok] Shielding is disabled"
}

function checkShield() {
  local userSet=$(sudo cset shield -s | grep '"user"')
  [[ "$userSet" =~ ^.*CPUSPEC\($cpuShield\)\ with\ 0\ tasks.*$ ]] || {
    echo "Expected empty user CPU set: $userSet"
    exit 42
  }
  echo " - [ok] CPU set 'user' is empty"

  local sysSet=$(sudo cset shield -u | grep '"system"')
  [[ "$sysSet" =~ ^.*CPUSPEC\(0\)\ with\ [0-9]+\ tasks.*$ ]] || {
    echo "Expected system CPU set: $sysSet"
    exit 42
  }
  echo " - [ok] CPU set 'system' exists"
}

function setupShield() {
  resetShield

  local log
  log=$(sudo cset shield -c $cpuShield)
  checkFail $? "create shield" "$log"
  echo " - [ok] Created CPU shield $cpuShield"

  log=$(sudo cset shield -k on)
  checkFail $? "shield kernel processes" "$log"
  echo " - [ok] Moved kernel processes to 'system' CPU set"

  checkShield
}

function resetShield() {
  local log
  sudo cset shield -r > /dev/null
  echo " - [ok] Removed CPU shield"
  checkNoShield
}

# Interrupt Affinity

function noIrqAffinitySkip() {
  local noSkip=0 # true
  for i in "${irqAffinitySkip[@]}"; do
    [[ $i == $1 ]] && {
      noSkip=1 # false
      break
    }
  done
  return $noSkip
}

function setupIrqAffinity() {
  local save=0
  [[ -e $irqAffinityFile ]] || save=1
  
  local f="/proc/irq/default_smp_affinity"
  [[ $save == 1 ]] && echo "$f:$(cat $f)" > $irqAffinityFile
  sudoWrite 1 $f
  [[ $(cat $f) == 1 ]] || {
    echo "Failed to set interrupt affinity of $f to 1"
    exit 42
  }

  for f in $(ls /proc/irq/*/smp_affinity); do
    if noIrqAffinitySkip $f; then
      [[ $save == 1 ]] && echo "$f:$(cat $f)" >> $irqAffinityFile
      sudoWrite 1 $f
      [[ $(cat $f) == 1 ]] || {
        echo "Failed to set interrupt affinity of $f to 1"
        exit 42
      }
    fi
  done

  echo " - [ok] Set interrupt affinity files to 1"
}

function resetIrqAffinity() {
  [[ -e $irqAffinityFile ]] && {
    for l in $(cat $irqAffinityFile); do
      echo $l | tr : " " | {
        read file mask
        [[ -e $file ]] && sudoWrite $mask $file
      }
    done
    rm $irqAffinityFile
  }
  echo " - [ok] Restored interrupt affinity files"
}

# Script infra

function usage() {
  echo "Usage: $0 [set|reset] -ns -nf -nl -ni"
  echo "  -ns: don't stop services"
  echo "  -nf: don't set a fixed CPU frequency ($cpuFrequency)"
  echo "  -nl: don't set up a shielded CPU set ($cpuShield)"
  echo "  -ni: don't set the affinity for intetrupt handlers to CPU 1"
  exit 42
}

function parseArgs() {
  [[ $# -gt 0 ]] || usage
  mode="$1"
  shift

  optServices=1
  optFrequency=1
  optShield=1
  optIrqAffinity=1

  while [[ $# -gt 0 ]]; do
    case "$1" in
      -ns)
        optServices=0
        ;;
      -nf)
        optFrequency=0
        ;;
      -nl)
        optShield=0
        ;;
      -ni)
        optIrqAffinity=0
        ;;
      *)
        echo "Unknown option: $1"
        usage
        ;;
    esac
    shift
  done
}

parseArgs "$@"

case $mode in
  set)
    echo "Checking machine configuration"
    checkKernelRelease
    checkNoHyperThreading
    checkNoTurboBoost
    checkNoNuma
    checkNoPstate
    checkRunningProcesses

    echo "Setting benchmarking environment"
    [[ $optServices    -eq 1 ]] && stopServices
    [[ $optFrequency   -eq 1 ]] && setFrequency
    [[ $optShield      -eq 1 ]] && setupShield
    [[ $optIrqAffinity -eq 1 ]] && setupIrqAffinity
    ;;

  reset)
    echo "Resetting benchmarking environment"
    resetIrqAffinity
    resetShield
    resetFrequency
    startServices
    ;;
  
  *)
    echo "Unknown mode: $mode"
    usage "$@"
    ;;
esac
